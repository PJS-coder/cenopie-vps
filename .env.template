# Cenopie Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE
# ============================================
MONGO_ROOT_USERNAME=your_mongodb_username
MONGO_ROOT_PASSWORD=your_mongodb_password
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# ============================================
# REDIS
# ============================================
REDIS_PASSWORD=your_redis_password
REDIS_URL=redis://default:password@host:port

# ============================================
# JWT SECRETS
# ============================================
# Generate with: openssl rand -hex 64
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here

# ============================================
# CLOUDINARY (Image Storage)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# APPLICATION URLs
# ============================================
CLIENT_ORIGIN=https://cenopie.com
NEXT_PUBLIC_API_URL=https://api.cenopie.com
PORT=4000

# ============================================
# LAUNCH CONTROL
# ============================================
# Set to false to disable new user registrations (closed beta mode)
ALLOW_REGISTRATION=false
LAUNCH_MODE=closed_beta

# ============================================
# EMAIL SERVICE
# ============================================
# Options: gmail, sendgrid, smtp
EMAIL_SERVICE=gmail

# For Gmail:
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Cenopie <noreply@cenopie.com>

# For SendGrid:
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# For Custom SMTP:
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-username
# SMTP_PASSWORD=your-smtp-password

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_CALLBACK_URL=https://api.cenopie.com/api/auth/google/callback

# ============================================
# PAYMENT GATEWAY
# ============================================
# Options: stripe, razorpay
PAYMENT_GATEWAY=stripe

# For Stripe:
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# For Razorpay:
# RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxx
# RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxx
# RAZORPAY_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxxxxx

# ============================================
# AI SERVICES (for Interview Feature)
# ============================================
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Alternative name (both work):
# CLAUDE_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# ANALYTICS
# ============================================
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ============================================
# MONITORING
# ============================================
GRAFANA_PASSWORD=your-secure-password

# ============================================
# PERFORMANCE SETTINGS
# ============================================
NODE_ENV=production
MONGO_MAX_POOL_SIZE=100
RATE_LIMIT_MAX=2000
RATE_LIMIT_WINDOW=900000
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_MEMORY_MONITORING=true
ENABLE_RATE_MONITORING=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1kb
BODY_JSON_LIMIT=10mb
BODY_URLENCODED_LIMIT=10mb
TRUST_PROXY=1

# ============================================
# CLUSTERING
# ============================================
MAX_CLUSTERS=20

# ============================================
# OPTIONAL: CDN
# ============================================
# CDN_URL=https://cdn.cenopie.com
# CLOUDFLARE_API_KEY=your-cloudflare-api-key
# CLOUDFLARE_ZONE_ID=your-zone-id


# HR Admin Passcode (for Cenopie internal HR team)
HR_ADMIN_PASSCODE=cenopie2024
